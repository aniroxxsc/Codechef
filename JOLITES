#include <iostream>
#include<string>
using namespace std;

int main(){
    int t;
    cin>>t;
    while(t){
        int n,count=0;
        cin>>n;
        string s;
        cin>>s;
        for(int i=0;i<=n-4;i++){
            if(s[i]=='J'){
                if(s[i+1]=='G'){
                    if(s[i+2]=='E'){
                        if(s[i+3]=='C'){
                            count++;
                        }
                    }
                }
            }
        }
        cout<<count<<endl;
        t--;
    }
    
    return 0;
}
